<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_margin="5dp"
            android:src="@drawable/account_box"
            tools:srcCompat="@drawable/account_box" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="To select a profile image, click on the picture" />

        <EditText
            android:id="@+id/editTextUpdateName"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Enter Full Name"
            android:inputType="text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextUpdateAge"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Enter Age"
            android:inputType="number"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextUpdateFavorite"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Enter Favorite Movie"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonUpdateUser"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="Edit Profile"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>
